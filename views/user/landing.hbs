<body style="box-sizing: none;">
  <section class="banner mt-5 pt-4">
    <div
      id="carouselExampleAutoplaying"
      class="carousel slide"
      data-bs-ride="carousel"
    >
      <div class="carousel-inner">
        {{#each banners}}
          <div class="carousel-item active">
            <img
              style="height:500px;"
              src="/uploads/cropped/{{Image}}"
              class="d-block w-100"
              alt="..."
            />
          </div>
        {{/each}}
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExampleAutoplaying"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#carouselExampleAutoplaying"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </section>

  <br />
  <div class="container-fluid">
    <h4 class="ms-5">Shop Popular Categories</h4>
    <br />
    {{#if categories}}
      <div class="row d-flex justify-content-center">
          {{#each categories}}
            <div class="col-6 col-md-6 col-lg-2 my-2">
              <a href="/shop-in?Category={{this._id}}">
                <div class="card container-fluid shadow border-0">
                  <div class="card-body d-flex justify-content-center">
                    <img class="img-fluid" src="/uploads/cropped/{{Image}}" alt="" />
                  </div>
                  <div class=" text-center p-2 border-0">
                    <a
                      href="/shop-in?Category={{this._id}}"
                      class="btn btn-white shadow rounded-pill"
                    >
                      {{CategoryName}}
                      <i class="fas fa-right-long"></i>
                    </a>
                  </div>
                </div>
              </a>
            </div>
          {{/each}}
      </div>
    {{/if}}
  <br />
  <h3 class="text-center fw-bold">Featured products ></h3>
  <br />
  <div class="container">
    <div class="row">
      {{#each productDetails}}
        <div class="col-md-3 gap-2">
          <div class="card">
            <a href="/product/details-view/{{this._id}}">
              <img
                src="/uploads/cropped/{{this.images.[0]}}"
                alt=""
                class="card-img-top"
              />
            </a>
            <div class="card-body border-top text-end">
              <dt class="card-text">
                â‚¹{{this.SellingPrice}}
                <br />
              </dt>
            </div>
            <div class="card-body">
              <dt class="card-text">{{this.BrandName}}
                <br />
                {{this.ProductName}}</dt>
              <div class="text-center">
                <p
                  id="addedToWishlistMessage_{{this._id}}"
                  class="text-success fw-bold"
                  data-product-id="{{this._id}}"
                  style="display: none;"
                >
                  added to wishlist
                </p>
              </div>
              <div class="d-flex justify-content-around">
                  <a
                    href="/login"
                    class="btn btn-white border btn-block"
                    style="width: 30%;"
                    data-product-id="{{this._id}}"
                  >
                    <i class="fa-regular fa-heart"></i>
                  </a>
                  <a
                    href="/product/details-view/{{this._id}}"
                    class="btn btn-danger btn-block"
                    style="width: 60%;"
                  >
                    view details
                  </a>
                </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</body>