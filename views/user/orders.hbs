<div class="container-fluid pt-5">
  {{#if noOrder}}
    <div class="row m-3 justify-content-center" style="min-height: 100vh;">
      <aside class="col-lg-6">
        <div class="card">
          <div class="m-5">
            <h4>We are waiting for your first order</h4>
            <a href="/shop" class="btn btn-primary"> shop now</a>
          </div>
        </div>
      </aside>
    </div>

  {{/if}}
  {{#unless noOrder}}
    <div class="row m-3 justify-content-center" style="min-height: 100vh;">
      <aside class="col-lg-6">
        <div class="card">
          <div class="table-responsive p-3">
            <h4>Your Orders</h4>
            <table class="table table-borderless table-shopping-cart">
              <tbody>
                {{#each orders}}
                  <tr>
                    <td>
                      <a
                        href="/track-order/{{_id}}"
                        class="text-dark"
                        style="text-decoration: none;"
                      >
                        <figure class="itemside d-flex align-items-center">
                          <div class="aside">
                            {{#if Products.length}}
                              <img
                                src="/uploads/{{Products.[0].ProductId.images.[0]}}"
                                class="img-sm"
                              />
                            {{/if}}
                          </div>
                          <figcaption class="info ms-5">
                            <span>ordered on: {{Date}}</span><br />
                            <dt>Total Amount: {{PayableAmount}}</dt>
                          </figcaption>
                        </figure>
                      </a>
                    </td>
                    <td>
                      <div class="price-wrap">

                      </div>
                    </td>
                    <td class="d-flex justify-content-end d-md-block ms-5">
                      <div class="d-flex justify-content-end mb-1 me-4">
                        <span
                          class="badge rounded-pill bg-info"
                        >{{Status}}</span>
                      </div>
                    </td>
                  </tr>
                {{/each}}

              </tbody>
            </table>
            {{! starting }}

            {{#if orders.length}}
          <div class="d-flex justify-content-between align-items-center mt-3 me-2">
            <p>
              Showing {{startIndex}}-{{endIndex}} results from {{totalCount}}
            </p>
            <ul class="pagination">
              {{#if hasPreviousPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{previousPage}}">Prev</a>
                </li>
              {{/if}}
      
              {{#if currentPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{currentPage}}">{{currentPage}}</a>
                </li>
              {{/if}}
      
              {{#if hasNextPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{nextPage}}">Next</a>
                </li>
              {{/if}}
            </ul>
          </div>
          {{else}}
            <p>No results found.</p>
          {{/if}}
            {{! ending }}
          </div>
        </div>
      </aside>
    </div>
  {{/unless}}
</div>
